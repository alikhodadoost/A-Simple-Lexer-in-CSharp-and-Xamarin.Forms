<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CSharp_Lexer"
             x:Class="CSharp_Lexer.MainPage">
    <Grid Padding="10" BackgroundColor="#424242">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50" />
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn_OpenFile" Grid.Row="0" Text="Open File" VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand" BackgroundColor="White" TextColor="#26c6da" />
        <Label x:Name="txt_Status" Grid.Row="1" Text="No Input File!" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand" TextColor="White"/>
        <Button x:Name="btn_Analyze" Grid.Row="2" Text="Analyze" VerticalOptions="FillAndExpand"  HorizontalOptions="FillAndExpand" BackgroundColor="White" TextColor="#26c6da" />
        <ScrollView Grid.Row="3" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="White">
            <Label x:Name="txt_LexedData" />
        </ScrollView>
    </Grid>

</ContentPage>
